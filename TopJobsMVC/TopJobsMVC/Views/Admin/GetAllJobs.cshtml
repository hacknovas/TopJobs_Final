@model IEnumerable<TopJobsMVC.Models.JobPost>

@{
    ViewBag.Title = "GetAllJobs";
}

<h2 class="text-center mb-4">Job Listings</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EmployerId)</th>
                    <th>@Html.DisplayNameFor(model => model.JobDetails)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                    <th>@Html.DisplayNameFor(model => model.ExpiryDate)</th>
                    <th>@Html.DisplayNameFor(model => model.VacancyDetails)</th>
                    <th>@Html.DisplayNameFor(model => model.RequiredSkills)</th>
                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.EmployerId)</td>
                        <td>@Html.DisplayFor(modelItem => item.JobDetails)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.ExpiryDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.VacancyDetails)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequiredSkills)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>
                            <a href="@Url.Action("DetailsJob", new { id = item.JobPostId })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("DeleteJob", new { id = item.JobPostId })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
